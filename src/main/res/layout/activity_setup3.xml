<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".Setup1Activity">

    <TextView
        style="@style/text_content_style"
        android:text="After SIM card chaged,
        \n Alarm message will send to following security number"/>

    <EditText
       android:id="@+id/et_setup3_saftnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please select contact number"/>

    <Button
        android:onClick="selectContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dip"
        >

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/btn_circle_normal"/>

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/btn_circle_normal"/>

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/btn_circle_selected"/>

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/btn_circle_normal"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/phone"/>

        <Button
            style="@style/button_pre_style" />

        <Button
            style="@style/button_next_style"/>

    </RelativeLayout>

</LinearLayout>
